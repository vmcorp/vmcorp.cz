---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Mail, MapPin, Clock, Send } from 'lucide-astro';
---

<Layout title="Contact Us - Velvethy & Mikes Corporation" description="Get in touch with Velvethy & Mikes Corporation to discuss your AI and technology transformation needs.">
	<Header />

	<main class="pt-16">
		<!-- Hero Section -->
		<section class="relative py-20 bg-gradient-to-b from-slate-950 to-slate-900 overflow-hidden">
			<div class="absolute inset-0 overflow-hidden opacity-20">
				<div class="absolute top-0 right-0 w-96 h-96 bg-cyan-500/20 rounded-full blur-3xl"></div>
				<div class="absolute bottom-0 left-0 w-96 h-96 bg-blue-600/20 rounded-full blur-3xl"></div>
			</div>

			<div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
				<div class="max-w-4xl mx-auto text-center">
					<h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6">
						<span class="text-white">Let's Start a</span>
						<span class="bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent"> Conversation</span>
					</h1>
					<p class="text-xl text-slate-300 leading-relaxed">
						Whether you're looking to transform your technology stack or explore AI solutions,
						we're here to help you succeed.
					</p>
				</div>
			</div>
		</section>

		<!-- Contact Content -->
		<section class="py-20 bg-slate-950">
			<div class="container mx-auto px-4 sm:px-6 lg:px-8">
				<div class="max-w-6xl mx-auto">
					<div class="grid grid-cols-1 lg:grid-cols-5 gap-12">
						<!-- Contact Information -->
						<div class="lg:col-span-2">
							<h2 class="text-2xl font-bold text-white mb-8">Get In Touch</h2>

							<div class="space-y-6">
								<!-- Address -->
								<div class="flex items-start space-x-4">
									<div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-cyan-500/20 to-blue-600/20 rounded-lg flex items-center justify-center">
										<MapPin size={24} class="text-cyan-400" />
									</div>
									<div>
										<h3 class="font-semibold text-white mb-1">Our Office</h3>
										<p class="text-slate-400 text-sm leading-relaxed">
											Francouzska 299/98, Vrsovice<br/>
											101 00 Prague 10<br/>
											Czech Republic
										</p>
									</div>
								</div>

								<!-- Email -->
								<div class="flex items-start space-x-4">
									<div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-cyan-500/20 to-blue-600/20 rounded-lg flex items-center justify-center">
										<Mail size={24} class="text-cyan-400" />
									</div>
									<div>
										<h3 class="font-semibold text-white mb-1">Email Us</h3>
										<p class="text-slate-400 text-sm">
											Fill out the form and we'll get back to you within 24 hours
										</p>
									</div>
								</div>

								<!-- Business Hours -->
								<div class="flex items-start space-x-4">
									<div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-cyan-500/20 to-blue-600/20 rounded-lg flex items-center justify-center">
										<Clock size={24} class="text-cyan-400" />
									</div>
									<div>
										<h3 class="font-semibold text-white mb-1">Business Hours</h3>
										<p class="text-slate-400 text-sm">
											Monday - Friday: 9:00 AM - 6:00 PM CET<br/>
											Saturday - Sunday: Closed
										</p>
									</div>
								</div>
							</div>

							<!-- Company Info Box -->
							<div class="mt-8 p-6 bg-slate-900/50 border border-slate-800 rounded-xl">
								<h3 class="font-semibold text-white mb-4">Company Details</h3>
								<div class="space-y-2 text-sm text-slate-400">
									<p><span class="text-slate-500">Legal Name:</span> Velvethy & Mikes Corporation</p>
									<p><span class="text-slate-500">IČ:</span> 28994124</p>
									<p><span class="text-slate-500">DIČ:</span> CZ28994124</p>
								</div>
							</div>
						</div>

						<!-- Contact Form -->
						<div class="lg:col-span-3">
							<div class="bg-slate-900/50 border border-slate-800 rounded-xl p-8">
								<h2 class="text-2xl font-bold text-white mb-6">Send Us a Message</h2>

								<form class="space-y-6" id="contact-form">
									<!-- Name -->
									<div>
										<label for="name" class="block text-sm font-medium text-slate-300 mb-2">
											Full Name *
										</label>
										<input
											type="text"
											id="name"
											name="name"
											required
											class="w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent transition-all"
											placeholder="John Doe"
										/>
									</div>

									<!-- Email -->
									<div>
										<label for="email" class="block text-sm font-medium text-slate-300 mb-2">
											Email Address *
										</label>
										<input
											type="email"
											id="email"
											name="email"
											required
											class="w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent transition-all"
											placeholder="john@company.com"
										/>
									</div>

									<!-- Company -->
									<div>
										<label for="company" class="block text-sm font-medium text-slate-300 mb-2">
											Company Name
										</label>
										<input
											type="text"
											id="company"
											name="company"
											class="w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent transition-all"
											placeholder="Your Company"
										/>
									</div>

									<!-- Service Interest -->
									<div>
										<label for="service" class="block text-sm font-medium text-slate-300 mb-2">
											Service Interest
										</label>
										<select
											id="service"
											name="service"
											class="w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent transition-all"
										>
											<option value="">Select a service</option>
											<option value="tech-to-value">Tech-to-Value Architecture</option>
											<option value="solution-architecture">Solution Architecture</option>
											<option value="ai-systems">Agentic AI System Design</option>
											<option value="open-source">Open Source Integration</option>
											<option value="devops">Backend Architecture & DevOps</option>
											<option value="education">Technology Evangelism & Education</option>
											<option value="hu-cz">HU-CZ Business Services</option>
											<option value="other">Other</option>
										</select>
									</div>

									<!-- Message -->
									<div>
										<label for="message" class="block text-sm font-medium text-slate-300 mb-2">
											Message *
										</label>
										<textarea
											id="message"
											name="message"
											required
											rows="6"
											class="w-full px-4 py-3 bg-slate-800 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent transition-all resize-none"
											placeholder="Tell us about your project or questions..."
										></textarea>
									</div>

									<!-- Submit Button -->
									<div>
										<button
											type="submit"
											class="w-full px-8 py-4 bg-gradient-to-r from-cyan-500 to-blue-600 rounded-lg font-semibold text-white hover:shadow-lg hover:shadow-cyan-500/50 transition-all duration-300 flex items-center justify-center space-x-2"
										>
											<span>Send Message</span>
											<Send size={20} />
										</button>
									</div>

									<!-- Form Note -->
									<p class="text-sm text-slate-400 text-center">
										We typically respond within 24 hours during business days.
									</p>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Map Placeholder Section -->
		<section class="py-20 bg-gradient-to-b from-slate-950 to-slate-900">
			<div class="container mx-auto px-4 sm:px-6 lg:px-8">
				<div class="max-w-6xl mx-auto">
					<div class="bg-slate-900/50 border border-slate-800 rounded-xl overflow-hidden">
						<!-- Map Placeholder -->
						<div class="aspect-video bg-slate-800 flex items-center justify-center">
							<div class="text-center">
								<MapPin size={48} class="text-slate-600 mx-auto mb-4" />
								<p class="text-slate-500 text-sm">
									Prague, Czech Republic
								</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>

<script>
	// Form handling (static for now)
	const form = document.getElementById('contact-form');

	form?.addEventListener('submit', (e) => {
		e.preventDefault();

		// This is a placeholder - in production, you would send this to a backend
		const formData = new FormData(e.target as HTMLFormElement);
		const data = Object.fromEntries(formData.entries());

		console.log('Form submitted:', data);

		// Show success message
		alert('Thank you for your message! We will get back to you within 24 hours.\n\n(Note: This is a demo. Form submissions are not currently being sent.)');

		// Reset form
		(e.target as HTMLFormElement).reset();
	});
</script>
