---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ServiceCard from '../components/ServiceCard.astro';
import { ArrowRight, Brain, Zap, Globe } from 'lucide-astro';

const services = [
	{
		title: "Tech-to-Value Architecture",
		description: "Strategic technology planning that directly connects technical decisions to measurable business outcomes and ROI.",
		icon: "target"
	},
	{
		title: "Solution Architecture",
		description: "Enterprise-grade system design combining scalability, security, and performance for mission-critical applications.",
		icon: "building-2"
	},
	{
		title: "Agentic AI System Design",
		description: "Multi-agent AI systems using LangChain, LangGraph, and CrewAI for intelligent automation and decision-making.",
		icon: "bot"
	},
	{
		title: "Open Source Integration",
		description: "Leverage powerful open-source technologies to reduce costs while maintaining enterprise-level capabilities.",
		icon: "unlock"
	},
	{
		title: "Backend Architecture & DevOps",
		description: "Modern infrastructure with Docker, Kubernetes, and cloud platforms (AWS/GCP/Azure) for reliable operations.",
		icon: "settings"
	},
	{
		title: "Technology Evangelism",
		description: "Education and training programs to upskill your team and create a culture of innovation.",
		icon: "book-open"
	},
	{
		title: "HU-CZ Business Services",
		description: "Strategic partnerships and business facilitation between Hungary and Czech Republic markets.",
		icon: "globe"
	}
];

const stats = [
	{ value: "10+", label: "Years Combined Experience" },
	{ value: "50+", label: "Projects Delivered" },
	{ value: "100%", label: "Client Satisfaction" }
];
---

<Layout title="Velvethy & Mikes Corporation - AI Consulting & Technology Transformation">
	<Header />

	<main class="pt-16">
		<!-- Hero Section -->
		<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
			<!-- Animated Background with Grid -->
			<div class="absolute inset-0 overflow-hidden">
				<div class="absolute inset-0 bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950"></div>

				<!-- Animated gradient orbs -->
				<div class="absolute top-1/4 left-1/4 w-96 h-96 bg-cyan-500/10 rounded-full blur-3xl animate-float"></div>
				<div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-blue-600/10 rounded-full blur-3xl animate-float" style="animation-delay: 1s;"></div>
				<div class="absolute top-1/2 right-1/3 w-64 h-64 bg-purple-500/5 rounded-full blur-3xl animate-float" style="animation-delay: 2s;"></div>

				<!-- Grid pattern -->
				<div class="absolute inset-0 bg-grid-pattern opacity-5"></div>

				<!-- Floating code snippets -->
				<div class="floating-code-container">
					<div class="floating-code" style="top: 10%; left: 5%; animation-delay: 0s;">
						<code>const AI = async () => {'{'}...{'}'}</code>
					</div>
					<div class="floating-code" style="top: 20%; right: 10%; animation-delay: 2s;">
						<code>import {'{'}LangChain{'}'} from 'ai'</code>
					</div>
					<div class="floating-code" style="top: 70%; left: 8%; animation-delay: 4s;">
						<code>transform(data).toValue()</code>
					</div>
					<div class="floating-code" style="bottom: 15%; right: 15%; animation-delay: 1s;">
						<code>deploy({'{'}cloud: 'AWS'{'}'})</code>
					</div>
					<div class="floating-code" style="top: 40%; left: 15%; animation-delay: 3s;">
						<code>agent.execute(task)</code>
					</div>
					<div class="floating-code" style="top: 60%; right: 20%; animation-delay: 5s;">
						<code>kubernetes.scale()</code>
					</div>
				</div>
			</div>

			<div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
				<div class="max-w-5xl mx-auto text-center hero-content">
					<!-- Main Headline -->
					<h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold mb-6 leading-tight">
						<span class="text-white">Transforming Data and Ideas</span>
						<br />
						<span class="headline-shimmer">
							into AI-driven Digital Reality
						</span>
					</h1>

					<p class="text-xl text-slate-300 mb-8 max-w-3xl mx-auto leading-relaxed">
						Elite AI consulting firm specializing in strategic technology transformation
						for mid-size organizations seeking enterprise-level capabilities.
					</p>

					<!-- CTA Buttons -->
					<div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-16">
						<a
							href="/services"
							class="btn-magnetic group relative px-8 py-4 bg-gradient-to-r from-cyan-500 to-blue-600 rounded-lg font-semibold text-white hover:shadow-2xl hover:shadow-cyan-500/50 transition-all duration-300 flex items-center space-x-2 overflow-hidden"
						>
							<span class="absolute inset-0 bg-gradient-to-r from-cyan-400 to-blue-500 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
							<span class="relative">Explore Our Services</span>
							<ArrowRight size={20} class="relative group-hover:translate-x-1 transition-transform" />
						</a>
						<a
							href="/contact"
							class="btn-magnetic relative px-8 py-4 border-2 border-slate-700 rounded-lg font-semibold text-white hover:bg-slate-800 hover:border-cyan-500/50 transition-all duration-300 overflow-hidden group"
						>
							<span class="absolute inset-0 bg-gradient-to-r from-cyan-500/10 to-blue-600/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
							<span class="relative">Get In Touch</span>
						</a>
					</div>

					<!-- Stats -->
					<div class="grid grid-cols-1 sm:grid-cols-3 gap-8 max-w-3xl mx-auto">
						{stats.map((stat) => (
							<div class="text-center stats-card">
								<div class="text-4xl font-bold bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent mb-2">
									{stat.value}
								</div>
								<div class="text-slate-400 text-sm">
									{stat.label}
								</div>
							</div>
						))}
					</div>
				</div>
			</div>

			<!-- Scroll Indicator -->
			<div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
				<div class="w-6 h-10 border-2 border-slate-600 rounded-full flex justify-center">
					<div class="w-1.5 h-1.5 bg-cyan-400 rounded-full mt-2"></div>
				</div>
			</div>
		</section>

		<!-- Services Overview -->
		<section class="py-20 bg-slate-950">
			<div class="container mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-16">
					<h2 class="text-4xl sm:text-5xl font-bold text-white mb-4">
						Our Core Services
					</h2>
					<p class="text-xl text-slate-400 max-w-3xl mx-auto">
						Comprehensive AI and technology solutions tailored to your business needs
					</p>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
					{services.map((service) => (
						<ServiceCard
							title={service.title}
							description={service.description}
							icon={service.icon}
						/>
					))}
				</div>

				<div class="text-center">
					<a
						href="/services"
						class="inline-flex items-center space-x-2 px-8 py-4 bg-slate-900 border border-slate-800 rounded-lg font-semibold text-white hover:border-cyan-500/50 transition-all duration-300"
					>
						<span>View All Services</span>
						<ArrowRight size={20} />
					</a>
				</div>
			</div>
		</section>

		<!-- Value Proposition -->
		<section class="relative py-20 bg-gradient-to-b from-slate-950 to-slate-900 overflow-hidden">
			<!-- Decorative background elements -->
			<div class="absolute top-10 left-10 w-72 h-72 bg-cyan-500/5 rounded-full blur-3xl animate-float"></div>
			<div class="absolute bottom-10 right-10 w-96 h-96 bg-blue-600/5 rounded-full blur-3xl animate-float" style="animation-delay: 2s;"></div>

			<div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
				<div class="max-w-6xl mx-auto">
					<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
						<!-- Strategic Focus -->
						<div class="service-card-animate group text-center lg:text-left p-6 rounded-xl hover:bg-slate-900/30 transition-all duration-300">
							<div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-cyan-500/20 to-blue-600/20 rounded-2xl mb-6 group-hover:scale-110 group-hover:rotate-3 transition-all duration-300">
								<Brain size={32} class="text-cyan-400" />
							</div>
							<h3 class="text-2xl font-bold text-white mb-4 group-hover:text-cyan-400 transition-colors">Strategic AI Focus</h3>
							<p class="text-slate-400 leading-relaxed group-hover:text-slate-300 transition-colors">
								We don't just implement technology â€“ we architect solutions that align with your business strategy and deliver measurable ROI.
							</p>
						</div>

						<!-- Mid-Size Expertise -->
						<div class="service-card-animate group text-center lg:text-left p-6 rounded-xl hover:bg-slate-900/30 transition-all duration-300" style="animation-delay: 0.1s;">
							<div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-cyan-500/20 to-blue-600/20 rounded-2xl mb-6 group-hover:scale-110 group-hover:rotate-3 transition-all duration-300">
								<Zap size={32} class="text-cyan-400" />
							</div>
							<h3 class="text-2xl font-bold text-white mb-4 group-hover:text-cyan-400 transition-colors">Mid-Size Excellence</h3>
							<p class="text-slate-400 leading-relaxed group-hover:text-slate-300 transition-colors">
								Specialized in helping mid-size organizations compete at enterprise levels while maintaining agility and innovation.
							</p>
						</div>

						<!-- Regional Bridge -->
						<div class="service-card-animate group text-center lg:text-left p-6 rounded-xl hover:bg-slate-900/30 transition-all duration-300" style="animation-delay: 0.2s;">
							<div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-cyan-500/20 to-blue-600/20 rounded-2xl mb-6 group-hover:scale-110 group-hover:rotate-3 transition-all duration-300">
								<Globe size={32} class="text-cyan-400" />
							</div>
							<h3 class="text-2xl font-bold text-white mb-4 group-hover:text-cyan-400 transition-colors">HU-CZ Bridge</h3>
							<p class="text-slate-400 leading-relaxed group-hover:text-slate-300 transition-colors">
								Unique expertise in facilitating business and technology partnerships between Hungarian and Czech markets.
							</p>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- CTA Section -->
		<section class="py-20 bg-slate-950">
			<div class="container mx-auto px-4 sm:px-6 lg:px-8">
				<div class="max-w-4xl mx-auto text-center">
					<h2 class="text-4xl sm:text-5xl font-bold text-white mb-6">
						Ready to Transform Your Business?
					</h2>
					<p class="text-xl text-slate-400 mb-8">
						Let's discuss how we can help you leverage AI and modern technology
						to achieve your strategic goals.
					</p>
					<a
						href="/contact"
						class="inline-flex items-center space-x-2 px-8 py-4 bg-gradient-to-r from-cyan-500 to-blue-600 rounded-lg font-semibold text-white hover:shadow-lg hover:shadow-cyan-500/50 transition-all duration-300"
					>
						<span>Schedule a Consultation</span>
						<ArrowRight size={20} />
					</a>
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>

<style>
	/* Grid Background Pattern */
	.bg-grid-pattern {
		background-image:
			linear-gradient(to right, rgba(6, 182, 212, 0.03) 1px, transparent 1px),
			linear-gradient(to bottom, rgba(6, 182, 212, 0.03) 1px, transparent 1px);
		background-size: 50px 50px;
		animation: gridMove 20s linear infinite;
	}

	/* Slightly more visible on larger screens */
	@media (min-width: 1024px) {
		.bg-grid-pattern {
			background-image:
				linear-gradient(to right, rgba(6, 182, 212, 0.05) 1px, transparent 1px),
				linear-gradient(to bottom, rgba(6, 182, 212, 0.05) 1px, transparent 1px);
		}
	}

	@keyframes gridMove {
		0% {
			background-position: 0 0;
		}
		100% {
			background-position: 50px 50px;
		}
	}

	/* Floating Code Snippets */
	.floating-code-container {
		position: absolute;
		inset: 0;
		pointer-events: none;
		display: none;
	}

	/* Show code snippets only on large screens */
	@media (min-width: 1024px) {
		.floating-code-container {
			display: block;
		}
	}

	.floating-code {
		position: absolute;
		opacity: 0;
		animation: floatCode 25s ease-in-out infinite;
	}

	.floating-code code {
		display: block;
		padding: 6px 10px;
		background: rgba(6, 182, 212, 0.03);
		border: 1px solid rgba(6, 182, 212, 0.08);
		border-radius: 4px;
		font-size: 0.65rem;
		color: rgba(6, 182, 212, 0.25);
		font-family: 'Monaco', 'Courier New', monospace;
		backdrop-filter: blur(5px);
		white-space: nowrap;
	}

	@keyframes floatCode {
		0% {
			opacity: 0;
			transform: translateY(0) translateX(0);
		}
		5% {
			opacity: 0.15;
		}
		95% {
			opacity: 0.15;
		}
		100% {
			opacity: 0;
			transform: translateY(-80px) translateX(30px);
		}
	}

	/* Enhanced Stats Animation */
	.stats-card {
		animation: fadeInUp 0.6s ease-out forwards;
		opacity: 0;
	}

	.stats-card:nth-child(1) {
		animation-delay: 0.2s;
	}

	.stats-card:nth-child(2) {
		animation-delay: 0.4s;
	}

	.stats-card:nth-child(3) {
		animation-delay: 0.6s;
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	/* Shimmer effect for headline */
	.headline-shimmer {
		background: linear-gradient(
			90deg,
			#06b6d4 0%,
			#3b82f6 25%,
			#8b5cf6 50%,
			#3b82f6 75%,
			#06b6d4 100%
		);
		background-size: 200% auto;
		background-clip: text;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		animation: shimmer 8s linear infinite;
	}

	@keyframes shimmer {
		to {
			background-position: 200% center;
		}
	}

	/* Subtle glow effect on CTA hover */
	@keyframes glow-pulse {
		0%, 100% {
			box-shadow: 0 0 20px rgba(6, 182, 212, 0.2);
		}
		50% {
			box-shadow: 0 0 40px rgba(6, 182, 212, 0.4);
		}
	}
</style>

<script>
	// Subtle gradient movement on mouse move
	document.addEventListener('mousemove', (e) => {
		const orbs = document.querySelectorAll('.animate-float');
		const { clientX, clientY } = e;
		const { innerWidth, innerHeight } = window;

		const xPercent = (clientX / innerWidth - 0.5) * 20;
		const yPercent = (clientY / innerHeight - 0.5) * 20;

		orbs.forEach((orb, index) => {
			const speed = (index + 1) * 0.3;
			(orb as HTMLElement).style.transform = `translate(${xPercent * speed}px, ${yPercent * speed}px)`;
		});
	});

	// Intersection Observer for scroll animations
	const observerOptions = {
		threshold: 0.1,
		rootMargin: '0px 0px -100px 0px'
	};

	const observer = new IntersectionObserver((entries) => {
		entries.forEach(entry => {
			if (entry.isIntersecting) {
				entry.target.classList.add('animate-fade-in-up');
			}
		});
	}, observerOptions);

	// Observe service cards
	document.querySelectorAll('.service-card-animate').forEach(card => {
		observer.observe(card);
	});
</script>
